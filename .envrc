# .envrc (workspace root)

# 1) Load simple KEY=VALUE lines from your Skaffold env file
#    (adjust path if yours differs)
dotenv ".devcontainer/skaffold/skaffold.env"

# 2) Optional: add a tiny wrapper to always use your nonstandard skaffold.yaml
mkdir -p .direnv/bin
cat > .direnv/bin/sdev <<'EOF'
#!/usr/bin/env bash
exec skaffold dev -f .devcontainer/skaffold/skaffold.yaml "$@"
EOF
chmod +x .direnv/bin/sdev
PATH_add .direnv/bin

export API_KEY=xxxx